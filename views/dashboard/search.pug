extends layout

block content
  if !user.isClubMember
    p You need to join the club to access search.
    a(href='/dashboard/club'): button Join the Club
  else
    h1 Search for messages
    form(action="/dashboard/search", method="post")
      .formControl
        label(for="searchQuery"): <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#5f6368"><path d="M784-120 532-372q-30 24-69 38t-83 14q-109 0-184.5-75.5T120-580q0-109 75.5-184.5T380-840q109 0 184.5 75.5T640-580q0 44-14 83t-38 69l252 252-56 56ZM380-400q75 0 127.5-52.5T560-580q0-75-52.5-127.5T380-760q-75 0-127.5 52.5T200-580q0 75 52.5 127.5T380-400Z"/></svg>
        input#searchQuery(type="search", name="searchQuery", placeholder="search for messages...", value=searchQuery ? searchQuery : '', required)
        - const searchQueryError = errors && errors.find(item => item.path === 'searchQuery')
        if searchQueryError
          span.error= searchQueryError.msg

    if messages 
      if messages.length
        h2 Results
        ol 
          for message in messages
            li
              p!= message.title
              p!= message.message
              if message.tags.length
                div
                  for tag in message.tags
                    a(href='/dashboard/search/tag/'+tag): span= tag
              a(href=message.user.url)= message.user.username 
              p= message.updatedAtFormatted
              img(src=message.coverImgUrl, alt="cover")
              if message.user.id === user.id
                .buttons 
                  a(href=message.url+'/update')
                    button
                      <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24"><path d="M200-200h57l391-391-57-57-391 391v57Zm-40 80q-17 0-28.5-11.5T120-160v-97q0-16 6-30.5t17-25.5l505-504q12-11 26.5-17t30.5-6q16 0 31 6t26 18l55 56q12 11 17.5 26t5.5 30q0 16-5.5 30.5T817-647L313-143q-11 11-25.5 17t-30.5 6h-97Zm600-584-56-56 56 56Zm-141 85-28-29 57 57-29-28Z"/></svg>
                      span update
                  a(href=message.url+'/delete')
                    button
                      <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24"><path d="M280-120q-33 0-56.5-23.5T200-200v-520q-17 0-28.5-11.5T160-760q0-17 11.5-28.5T200-800h160q0-17 11.5-28.5T400-840h160q17 0 28.5 11.5T600-800h160q17 0 28.5 11.5T800-760q0 17-11.5 28.5T760-720v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM400-280q17 0 28.5-11.5T440-320v-280q0-17-11.5-28.5T400-640q-17 0-28.5 11.5T360-600v280q0 17 11.5 28.5T400-280Zm160 0q17 0 28.5-11.5T600-320v-280q0-17-11.5-28.5T560-640q-17 0-28.5 11.5T520-600v280q0 17 11.5 28.5T560-280ZM280-720v520-520Z"/></svg>
                      span delete
      else
        p There are no results for #[strong #{searchQuery}] .
