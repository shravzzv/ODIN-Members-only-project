extends layout

block content
  form(action="", method="post")
    .formControl 
      label(for="username") Username: 
      input#username(type="text", name="username", placeholder="john12", value=username || '')
    .formControl
      label(for="password") Password:
      input#password(type="password", name="password", value=password || '')
    button(type="submit") Sign In
  if errors
    .errors
      h2 Errors
      ol 
        for error in errors
          li!= error.msg || error.message || error